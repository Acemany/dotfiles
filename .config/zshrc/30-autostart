# -----------------------------------------------------
# AUTOSTART
# -----------------------------------------------------

# -----------------------------------------------------
# Fastfetch
# -----------------------------------------------------
if [[ $(tty) == *"pts"* ]]; then
    timg $(pokeshell -f random) -pq --auto-crop | fastfetch -c ~/.config/fastfetch/mini.jsonc --show-errors --logo -
    echo "Type \"whatshappenin\" to see system status, check if needed scripts/daemons are running and to see useful commands"
else
    echo
    if [ -f /bin/hyprctl ]; then
        echo "Start Hyprland with command Hyprland"
    fi
fi
