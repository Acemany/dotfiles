# -----------------------------------------------------
# ALIASES
# -----------------------------------------------------

# -----------------------------------------------------
# General
# -----------------------------------------------------
alias c='clear'
alias ff='fastfetch'
alias neofetch='fastfetch -c $HOME/.config/fastfetch/presets/neofetch.jsonc'
alias nf='neofetch'
alias paleofetch='fastfetch -c HOME/.config/fastfetch/presets/paleofetch.jsonc'
alias pf='paleofetch'
alias ls='eza -Al --icons=always'
alias ll='eza -Al --icons=always'
alias lt='eza -A --tree --level=1 --icons=always'
alias shutdown='systemctl poweroff'
alias v='$EDITOR'
alias vim='$EDITOR'
alias nano='$EDITOR'
alias wifi='nmtui'

# -----------------------------------------------------
# System
# -----------------------------------------------------
alias update-grub='sudo grub-mkconfig -o /boot/grub/grub.cfg'
